  "version": "0.2.0",
  "configurations": [
    {
      "name": "TS Node Dev",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/.bin/tsnd",
      "args": [
        "-r",
        "tsconfig-paths/register",
        "--transpile-only",
        "--ignore-watch",
        "node_modules",
        "src/server.ts"
      ]
    }
  ]
}
